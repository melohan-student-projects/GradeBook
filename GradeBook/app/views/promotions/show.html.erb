<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @promotion %>


    <div class="inline-block ml-2">
      <%= link_to 'Edit this promotion', edit_promotion_path(@promotion), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this promotion', promotion_path(@promotion), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <div class="inline-block ml-2">
      <%= link_to 'Back to promotions', promotions_path, class: " rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
